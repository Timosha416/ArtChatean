@using ArtChatean.Models.Forms;
@using ArtChatean.Models;
@{
    Layout = "_AdminLayout";
}
@model ForgotPasswordViewModel
@{
    var picture = ViewBag.RandomPicture as Picture;
}


<div class="login-form">
    <h1>Forgot Password?</h1>
    <p>Please enter your email to receive a password reset link.</p>
    <form method="post" enctype="multipart/form-data" autocomplete="off">
        <div>
            @Html.LabelFor(m => m.Email, "Enter your e-mail address:")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "Enter your email", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <button type="submit" class="login-button">Send password reset link</button>
        <a href="/Account/Login" class="register-button">Return to login</a>
    </form>
</div>

<div class="login-image">
    @if (picture.Image != null && picture.Image.Length > 0)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(picture.Image)" alt="" />
    }
    else
    {
        <img src="#" alt="Profile Image" />
    }
</div>


@section HeadEnd {
    <style>
        .login-form {
            flex: 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            margin: 0 auto;
            height: 100%;
        }

            .login-form h1 {
                width: 70%;
                margin: 0 0 20px;
                font-size: 28px;
            }

            .login-form p {
                width: 70%;
                margin: 0 0 20px;
            }

        form {
            width: 70%;
        }

            form label {
                display: block;
                margin: 10px 0 5px;
            }

            form input {
                width: 100%;
                padding: 10px;
                margin: 10px 0px 20px 0px;
                border: 1px solid white;
                border-radius: 5px;
                box-sizing: border-box;
            }       

        .login-button,        
        .register-button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 20px;
            background-color: white;
            color: black;
            font-size: 16px;
            box-sizing: border-box;
            border: 2px solid white;
        }

        .register-button {
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

            .login-button:hover,            
            .register-button:hover {
                background-color: black;
                color: white;
                border: 2px solid white;
            }

        .login-button{
            margin-top: 30px;
        }

        .login-image {
            flex: 3;
            background: #ddd;
            height: 90%;
            margin-right: 40px;
        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }
    </style>
}	