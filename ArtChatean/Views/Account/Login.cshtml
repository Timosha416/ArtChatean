@using ArtChatean.Models.Forms;
@using ArtChatean.Models;
@{
    Layout = "_AdminLayout";
}
@model LoginForm
@{
    var picture = ViewBag.RandomPicture as Picture;
    ViewData["Title"] = "Login";
}


<div class="login-form">
    <h1>Welcome back</h1>
    @if (TempData["ConfirmationMessage"] != null)
    {
        <div class="alert alert-info">
            @TempData["ConfirmationMessage"]
        </div>
    }

    <p>Please enter your details</p>
    <form method="post" enctype="multipart/form-data" autocomplete="off">
        <div>
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "Enter your email", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "Enter your password", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="remember-forgot">
            <label>
                @Html.CheckBoxFor(m => m.RememberMe) Remember for 30 days
            </label>
            <a href="/Account/ForgotPassword">Forgot password?</a>
        </div>

        <button type="submit" class="login-button">Sign in</button>
        <a href="/Account/Register" class="register-button">Register</a>
        @* <button type="button" class="google-signin">Sign in with Google</button> *@
    </form>
</div>
<div class="login-image">
    @if (picture.Image != null && picture.Image.Length > 0)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(picture.Image)" alt="" />
    }
    else
    {
        <img src="#" alt="Profile Image" />
    }
</div>

@section HeadEnd {
    <style>
        .login-form {
            flex: 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            margin: 0 auto;
            height: 100%;
        }

            .login-form h1 {
                width: 70%;
                margin: 0 0 10px;
                font-size: 28px;
            }

            .login-form p {
                width: 70%;
                margin: 0 0 20px;
            }

        .alert {
            width: 70%;      
            padding: 15px;
            box-sizing: border-box;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .alert-info {
            color: #0c5460;
            background-color: #d1ecf1;
            border-color: #bee5eb;
            font-weight: bold;
        }

        form {
            width: 70%;
        }

            form label {
                display: block;
                margin: 10px 0 5px;
            }

            form input {
                width: 100%;
                padding: 10px;
                margin-bottom: 20px;
                border: 1px solid white;
                border-radius: 5px;
                box-sizing: border-box;
            }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .remember-forgot label {
                display: flex;                
                align-items: center;
            }

            .remember-forgot input {
                margin: 0 5px 0 0; 
                padding: 0;
                width: auto;
                height: auto;
            }

            .remember-forgot a {
                color: white;
                text-decoration: none;
            }

        .login-button,
        .google-signin,
        .register-button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 20px;
            background-color: white;
            color: black;
            font-size: 16px;
            box-sizing: border-box;
            border: 2px solid white;
        }

        .register-button {
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

            .login-button:hover,
            .google-signin:hover,
            .register-button:hover {
                background-color: black; 
                color: white;
                border: 2px solid white;
            }

        .google-signin {
            background-color: white;
            color: black;
            border: 1px solid white;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .google-signin::before {
                content: '';
                background: url('https://developers.google.com/identity/images/g-logo.png') no-repeat center;
                background-size: contain;
                width: 20px;
                height: 20px;
                display: inline-block;
                margin-right: 10px;
            }              

        .login-image {
            flex: 3;
            background: #ddd;
            height: 90%;
            margin-right: 40px;
        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }
    </style>
}	