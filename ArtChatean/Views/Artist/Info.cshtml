@model ArtChatean.Models.Artist

@{
    Layout = "_MainLayout";
}

<div class="artist-info-container">
    <!-- Велике ім'я художника -->

    <div class="fullname-block" style="background-image: url('data:image/png;base64,@(Model.HeaderPicture != null ? Convert.ToBase64String(Model.HeaderPicture) : "default.png")'); background-size: cover; background-position: center;">
        <h1 class="artist-name">@Model.FullName</h1>
    </div>
    <!-- Цитата -->
    <div class="quote-block">
        <p class="quote-text">"@Model.Quote"</p>
    </div>

    <!-- Інформація та біографія з фото -->
    <div class="bio-section">
        <div class="bio-text">
            <h2>@Model.FullName</h2>
            <p>@Model.Bio</p>
            <button class="next-btn" onclick="location.href='@Url.Action("Painters", "Artist")'">Next</button>
        </div>
        <div class="artist-photo">
            <img src="data:image/png;base64,@(Model.BigPhoto != null ? Convert.ToBase64String(Model.BigPhoto) : "default.png")" alt="@Model.FullName" />
        </div>
    </div>

    <!-- Картини художника -->
    <section class="overlapping">
        <div class="grid-container">
            <img src="data:image/png;base64,@(Model.Picture1 != null ? Convert.ToBase64String(Model.Picture1) : "default.png")" alt="Picture 1">
            <img src="data:image/png;base64,@(Model.Picture2 != null ? Convert.ToBase64String(Model.Picture2) : "default.png")" alt="Picture 2">
            <img src="data:image/png;base64,@(Model.Picture3 != null ? Convert.ToBase64String(Model.Picture3) : "default.png")" alt="Picture 3">
            <img src="data:image/png;base64,@(Model.Picture4 != null ? Convert.ToBase64String(Model.Picture4) : "default.png")" alt="Picture 4">
            <img src="data:image/png;base64,@(Model.Picture5 != null ? Convert.ToBase64String(Model.Picture5) : "default.png")" alt="Picture 5">
        </div>
    </section>

    <!-- Відео -->
    <div class="video-section">
        <iframe width="1160" height="550" src="@Model.Video" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>

    <!-- Місце перегляду картин -->
    <div class="museum-info">
        <p>You can see most of @Model.FullName's paintings at the Musée d'Orsay</p>
    </div>

    <!-- Кнопка покупки квитка та статичний текст з картинкою -->
    <div class="ticket-section">
        <div class="ticket-text">
            <h2>About exhibition</h2>
            <p>The Musée d'Orsay is proud to host a remarkable exhibition showcasing the works of a renowned artist. This highly anticipated event invites art enthusiasts and connoisseurs to immerse themselves in an extraordinary collection of paintings that highlight the innovative spirit and unique style of the featured artist. The exhibition promises to be a captivating journey through the artist's creative evolution, presenting a diverse range of pieces that exemplify their mastery and vision. Visitors will have the opportunity to explore various periods and themes, each artwork offering a glimpse into the artist's imaginative world. Set in the iconic Musée d'Orsay, the exhibition provides an ideal backdrop for appreciating these masterpieces. The museum's stunning architecture and rich history complement the artwork, creating an inspiring atmosphere for all attendees. Join us at the Musée d'Orsay to experience this exceptional showcase, celebrating a legacy of artistic brilliance and creativity. Don’t miss this chance to witness the genius of one of history's greatest artists in one of the world's most prestigious art institutions.</p>
            <button class="buy-ticket-btn" onclick="location.href='@Url.Action("Events", "Event", new { artistId = Model.Id })'">Buy Ticket</button>
        </div>
        <div class="museum-image">
            <img src="~/images/Museum.jpg" alt="Museum" />
        </div>
    </div>
</div>

