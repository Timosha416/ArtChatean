@using ArtChatean.ViewModels

@model PdfTicketsViewModel

@{
    Layout = "_MainLayout";
    var timeSlot = ViewBag.TimeSlot;
}

<div class="title-block">
    <h1>Thank you!</h1>
    <p>Here are your tickets:</p>
</div>

<div class="tickets-container">
    @for (int i = 0; i < Model.TicketCount; i++)
    {
        <div class="ticket">
            <div class="ticket-header">
                <h2>Ticket</h2>
                <a href="@Url.Action("DownloadTicket", "Event", new { timeSlotId = timeSlot.Id })" class="download-link">
                    <img src="~/images/download.png" alt="Download" class="download-icon" />
                </a>
            </div>
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ArtistBigPhoto))" alt="Artist Big Photo" class="artist-photo" />
            <p class="artist-name"><strong>@Model.ArtistName</strong></p>
            <p class="event-description">@Model.EventDescription</p>
            <p class="time">Дата події: @Model.TicketDate</p>
            <p class="time">Час події: @Model.TicketTime</p>
            <img src="~/images/screenshot.png" alt="Barcode" class="barcode" />
        </div>
    }
</div>

@section HeadEnd {
<style>
    /* Загальні стилі сторінки */
