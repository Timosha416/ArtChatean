@using ArtChatean.Models
@model User
@{
    Layout = "_MainLayout";
}


    <div class="menu">
        <div class="menu-title">Customer Account</div>
        <ul>
            <li><a href="@Url.Action("Main", new { section = "ActiveOrders" })">My active orders</a></li>
            <li><a href="@Url.Action("Main", new { section = "DoneOrders" })">My done orders</a></li>
            <li><a href="@Url.Action("Main", new { section = "Addresses" })">My addresses</a></li>
            <li><a href="@Url.Action("Main", new { section = "PaymentMethods" })">My payment methods</a></li>
            <li><a href="@Url.Action("Main", new { section = "Support" })">Support</a></li>
        </ul>
    </div>
    
    <div class="order" id="order">
        @if (ViewBag.SelectedSection == "ActiveOrders")
        {
            @Html.Partial("_ActiveOrders", Model)
        }
        else if (ViewBag.SelectedSection == "DoneOrders")
        {
            @Html.Partial("_DoneOrders", Model)
        }
        else if (ViewBag.SelectedSection == "Addresses")
        {
            @Html.Partial("_Addresses", Model)
        }
        else if (ViewBag.SelectedSection == "PaymentMethods")
        {
            @Html.Partial("_PaymentMethods", Model)
        }
        else if (ViewBag.SelectedSection == "Support")
        {
            @Html.Partial("_Support", Model)
        }
        else
        {
            <div>Select a section from the menu.</div>
        }
    </div>


@section HeadEnd {
    <style>
        .main {            
            display: flex;
            flex-direction: row;
            justify-content: center;
            min-height: 1000px;
        }

        .menu-title {
            font-size: 24px;
            font-weight: bold;
            height: 40px;
        }
        /* МЕНЮ */
        .menu {
            display: flex;
            flex-direction: column;
            align-items: left;
            gap: 10px;
            flex: 1;
            margin: 20px;
        }

        .titlename {
            border-bottom: 1px solid white;
        }           

        .menu ul {
            list-style-type: none;
            padding: 0;
        }

            .menu ul li {
                margin-bottom: 15px;
            }

                .menu ul li a {
                    text-decoration: none;
                    font-weight: bold;
                    color: white;
                }

                    .menu ul li a:hover {
                        text-decoration: underline;
                    }

        /* ЗАМОВЛЕННЯ */
        .order {
            display: flex;
            flex-direction: column;
            flex: 3;
            margin: 20px;
            gap: 10px;
            margin-bottom: 20px;
        }

        .order-full {
            display: flex;
            flex-direction: column;
            padding: 20px;
            gap: 10px;
            margin-bottom: 20px;
            border: 2px solid white;
            border-radius: 10px;
        }

        /* НОМЕР ОРДЕРУ */
        .order-header {
            display: flex;
            justify-content: space-between;
            height: 40px;
        }

        .order-number {
            font-size: 24px;
            font-weight: bold;
        }

        .order-status {
            display: flex;
            flex-direction: column;
            gap: 2px;
            font-size: 12px;
            text-align: right;
        }
            .order-status span {
                display: block;
            }

        /* ІНФОРМАЦІЯ ПРО ДОСТАВКУ */
        .progress-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid white;
            padding-bottom: 10px;
        }

            .progress-bar div {
                font-size: 12px;
            }

            .progress-bar .completed {
                font-weight: bold;
            }

        .order-details {
            display: flex;
            flex-direction: column;
            gap: 10px;
            /* border-bottom: 3px solid white; */
        }

            .order-details h3 {
                margin-bottom: 20px;
                font-size: 20px;
            }

        .order-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid white;
        }

            .order-item img {
                flex: 2;
                width: 100px;
                height: auto;
            }

        .order-item-info {
            display: flex;
            flex-direction: column;
            align-items: left;
            justify-content: center;
            gap: 3px;
            flex: 6;
        }

        .order-item-title{
            font-size: 18px;
            font-weight: bold;
        }

        .order-item-qty, .order-item-price {
            flex: 2;
        }

        #order-item-price{
            text-align: right;
        }

        .delete-button {
            flex: 1;
            background-color: #f44336;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

            .delete-button:hover {
                background-color: #d32f2f;
            }

            .delete-button:active {
                transform: scale(0.95); 
            }

            .delete-button:focus {
                outline: none;
            }

        .username-link {
            color: inherit;
            text-decoration: none;
            cursor: pointer;
        }

            .username-link:hover {
                text-decoration: underline; /* Підкреслення при наведенні */
            }
        /* БЛОК СУМИ */
        .order-summary {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .order-total {
            display: flex;
            justify-content: flex-end;
            font-size: 24px;
            font-weight: bold;
        }        

        .redirect-button {
            background-color: white;
            color: black;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 50px;
            text-align: center;
            font-weight: bold;
            width: 10%;
        }

            .redirect-button:hover {
                background-color: green;
            }   
    </style>
}
